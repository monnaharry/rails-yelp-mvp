<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>

<hr>

<h4>Reviews</h4>
<% if @restaurant.reviews.empty? %>
    <p>No reviews yet</p>
  <% else %>
    <ul class="list-group"><% @restaurant.reviews.each do |review| %>
      <li class="list-group-item d-flex justify-content-between align-items-center"> <%= review.content%> <span class="badge badge-primary badge-pill"><%= review.rating %></span></li>
    <% end %>
    </ul>
 <% end %>

<!-- iterate through that  -->
<%= link_to 'All Restaurants', restaurants_path, class: "btn btn-primary"%>
<%= link_to 'Write a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

